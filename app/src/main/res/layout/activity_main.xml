<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />

        <Button
            android:id="@+id/go_RxBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="RxBus 示例" />

        <Button
            android:id="@+id/go_Thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="Thread 示例" />

        <Button
            android:id="@+id/go_Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="loading 示例" />

        <Button
            android:id="@+id/go_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="api 示例" />

        <Button
            android:id="@+id/go_mvp_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="mvp api 示例" />

        <Button
            android:id="@+id/go_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="下载示例" />

        <Button
            android:id="@+id/showDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="对话框示例" />

        <Button
            android:id="@+id/go_cmd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="cmd 示例" />

        <Button
            android:id="@+id/go_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="bar主题示例" />

        <Button
            android:id="@+id/go_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="分享示例" />

        <Button
            android:id="@+id/go_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="登录示例" />

        <Button
            android:id="@+id/go_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="支付示例" />

        <Button
            android:id="@+id/go_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="倒计时示例" />

        <Button
            android:id="@+id/go_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="权限申请示例" />

        <Button
            android:id="@+id/go_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="SP示例" />

        <Button
            android:id="@+id/go_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="拍照和图库示例" />

        <Button
            android:id="@+id/go_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go2Act"
            android:text="selector示例" />
    </LinearLayout>

</ScrollView>